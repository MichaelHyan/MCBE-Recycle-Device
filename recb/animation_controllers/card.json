{
	"format_version": "1.8.0",
	"animation_controllers": {
		"controller.animation.card":{
			"states":{
				"base_jeta":{
					"transitions":[
						{"karda":"query.get_equipped_item_name=='carda' && query.is_using_item"},
						{"kardb":"query.get_equipped_item_name=='cardb' && query.is_using_item"},
						{"kardc_a":"query.get_equipped_item_name=='cardc' && query.is_using_item && query.scoreboard('score') >= -10000"},
						{"kardc_b":"query.get_equipped_item_name=='cardc' && query.is_using_item && query.scoreboard('score') < -10000"}
					]
				},
				"karda": {
					"transitions": [
							{
								"base_jeta": "(1.0)"
							}
					],
					"on_entry": [
						"/scoreboard objectives add score dummy",
						"/scoreboard objectives setdisplay sidebar score",
						"/give @s items:reca",
						"/give @s items:crpa",
						"/give @s items:caha",
						"/give @s items:frma",
						"/give @s items:reda",
						"/give @s items:cardc"
					]
				},
				"kardb": {
					"transitions": [
							{
								"base_jeta": "(1.0)"
							}
					],
					"on_entry": [
						"/scoreboard players add @s score 100"
					]
				},
				"kardc_a": {
					"transitions": [
							{
								"base_jeta": "(1.0)"
							}
					],
					"on_entry": [
						"/give @s items:re"
					]
				},
				"kardc_b": {
					"transitions": [
							{
								"base_jeta": "(1.0)"
							}
					],
					"on_entry": [
						"/give @s items:re",
						"/effect @s wither infinite 1 true"
					]
				}
			}
		}
 	}
 }